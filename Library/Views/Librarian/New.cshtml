@{
  Layout = "_Layout";
}

<div class="container">
    <h2>Library</h2>
    <br>
    <p>Add a book to the librarie's database!</p>
    <form action="/librarian/books/new" method="post">
        <label for="bookTitle">Enter the Book's Title</label><br>
        <input id="bookTitle" name="bookTitle" type="text" required><br>
        <label for="bookAuthor">Enter the Book's Author</label><br>
        <input id="bookAuthor" name="bookAuthor" type="text" required><br>
         <button id="courseButton"class="btn btn-primary btn-lg" type="submit">Add a Book</button>
    </form>
</div>
