@using Library.Models
@{
  Layout = "_Layout";
}

<div class="container">
    <h2>Library</h2>
    <br>
    <p>Checkout a Book from the Library!</p>
    <form action="/patron/checkout" method="post">
        <label for="patronName">Enter your name</label><br>
        <input id="patronName" name="patronName" type="text" required><br>
        <label for="bookTitle">Enter the Book's Title</label><br>
        <input id="bookTitle" name="bookTitle" type="text" required><br>
        <button id="courseButton"class="btn btn-primary btn-lg" type="submit">Checkout</button>
    </form>
    <br>
    @if (@Model == 0)
    {
        <p>The library does not have the book.</p>
    }
</div>
